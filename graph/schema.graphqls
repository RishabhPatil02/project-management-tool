# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Date

type Task {
  id: ID!
  text: String!
  done: Boolean!
  dueDate: Date
}

type User {
  id: ID!
  name: String!
}

type Query {
  tasks: [Task!]!
  users: [User!]!
}

input NewTask {
  text: String!
  dueDate: Date
}

input NewUser {
  name: String!
}

type Mutation {
  createTask(input: NewTask!): Task!
  createUser(input: NewUser!): User!
}
